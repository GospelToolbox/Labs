<div class="container">

<div class="p-1">
  <%=link_to '< Back to plans', plans_path %>
</div>

<h1>New Plan</h1>

<%= form_with scope: :plan, url: plans_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %><br>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_date %><br>
    <%= form.text_field :start_date, class: "form-control" %>
    <small id="startDateHelp" class="form-text text-muted">YYYY-MM-DD</small>
  </div>

  <div class="form-group">
    <%= form.label :number_of_weeks %><br>
    <%= form.text_field :number_of_weeks, class: "form-control" %>
  </div>
 
  <p>
    <%= form.submit class: 'btn btn-primary' %>
  </p>
<% end %>

</div>